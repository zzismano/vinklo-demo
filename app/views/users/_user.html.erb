<div id="<%= dom_id user %>" class="col-12 col-m-4 col-lg-3 card m-3 d-flex flex-column align-items-center">
  <p>
    <strong>Name:</strong>
    <%= user.name.capitalize %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= user.phone %>
  </p>

  <p>
    <strong>CPF:</strong>
    <%= user.cpf %>
  </p>

  <p>
    <% if current_page?(users_path) %>
      <%= link_to "Show this user", user %>
    <% end %>
  </p>
</div>
